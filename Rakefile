begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = 'simple_facebook'
    gemspec.version = '1.0'
    gemspec.summary = "Simple interface for the Facebook API."
    gemspec.description = %{Interface for the Facebook API.}
    gemspec.author = "Chris Vincent"
    gemspec.email = "c.j.vincent@gmail.com"
    gemspec.add_dependency('activesupport', '>= 2.2.2')
    gemspec.add_dependency('json_pure', '>= 1.1.6')
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end